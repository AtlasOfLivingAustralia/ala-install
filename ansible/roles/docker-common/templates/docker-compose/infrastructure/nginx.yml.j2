  # Nginx reverse proxy
services:
  nginx:
    container_name: la_nginx
    image: nginx:latest
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - {{ nginx_conf_dir }}/conf.d:/etc/nginx/conf.d:ro
{% if ssl_certificate_server_dir is defined %}
      # Mount Let's Encrypt certificates from host
      - {{ ssl_certificate_server_dir }}:/etc/nginx/ssl:ro
{% endif %}
    networks:
      default: {}
      {{ docker_network | default('internal') }}:
    depends_on:
{% if 'collectory' in services_enabled %}
      collectory:
        condition: service_healthy
{% endif %}
{% if 'cas' in services_enabled or groups['cas-servers'] is defined %}
      cas:
        condition: service_healthy
      userdetails:
        condition: service_healthy
      apikey:
        condition: service_healthy
      cas-management:
        condition: service_healthy
{% endif %}
{% if 'species-list' in services_enabled or groups['species-list'] is defined %}
      species-list:
        condition: service_healthy
{% endif %}
    healthcheck:
      test: ["CMD", "wget", "--quiet", "--tries=1", "--spider", "http://localhost/"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    restart: unless-stopped
    environment:
      TZ: {{ server_tz | default('UTC') }}

