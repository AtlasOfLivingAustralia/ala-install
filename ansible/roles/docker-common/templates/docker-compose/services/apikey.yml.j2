  # API Key Service
  apikey:
{% if build_images | default(false) %}
    # Using locally built image from docker buildx bake
    image: {{ docker_registry | default('') }}apikey:{{ docker_tag | default('develop') }}
    pull_policy: never  # Don't try to pull - image is local
{% else %}
    # Using pre-built image from Docker Hub
    image: {{ docker_registry | default('atlasoflivingaustralia/') }}apikey:{{ apikey_version | default('1.7.0') }}
{% endif %}
    volumes:
      - {{ data_dir }}/apikey/config:/data/apikey/config:ro
      - {{ data_dir }}/apikey/data:/data/apikey/data
{% if i18n.enabled and i18n.strategy == 'volume' %}
      - {{ i18n.volume.name }}:/opt/atlas/i18n/:ro
{% endif %}
    environment:
      TZ: {{ server_tz | default('UTC') }}
      DOCKERIZE_OPTS: "-wait tcp://{{ apikey_db_hostname | default('mysql') }}:3306 -timeout 120s"
    ports:
      - "9002:8080"
    networks:
      default: {}
      {{ docker_network | default('la_internal') }}:
        aliases:
          - {{ apikey_hostname | default(apikey_docker_host | default('apikey')) }}
    depends_on:
{% if i18n.enabled and i18n.strategy == 'volume' and i18n.volume.source == 'init-container' %}
      i18n-init:
        condition: service_completed_successfully
{% endif %}
      mysql:
        condition: service_healthy
      cas:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "--fail", "http://localhost:8080/apikey/"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 60s
    restart: unless-stopped


