  # MongoDB for CAS (ticket registry, audit, sessions)
  mongodb:
    image: mongo:{{ mongodb_version | default('4.4') }}
    volumes:
      - mongodb-data:/data/db
      - {{ data_dir }}/mongodb/init:/docker-entrypoint-initdb.d:ro
    environment:
      TZ: {{ server_tz | default('UTC') }}
      MONGO_INITDB_ROOT_USERNAME: {{ mongodb_root_user | default('root') }}
      MONGO_INITDB_ROOT_PASSWORD: {{ mongodb_root_password }}
      MONGO_INITDB_DATABASE: {{ mongodb_cas_database | default('cas') }}
      CAS_MONGO_PASSWORD: {{ cas_mongo_password | default(mongodb_root_password) }}
    expose:
      - 27017
    networks:
      default: {}
      {{ docker_network | default('la_internal') }}:
        aliases:
          - {{ mongodb_hostname | default('mongodb') }}
    healthcheck:
      test: ["CMD", "mongosh", "--eval", "db.adminCommand('ping')"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
    restart: unless-stopped


