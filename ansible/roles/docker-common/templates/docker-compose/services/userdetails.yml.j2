  # User Details Service
  userdetails:
    container_name: userdetails
{% if build_images | default(false) %}
    # Using locally built image
    image: userdetails:{{ user_details_version | default('3.2.1') }}
    pull_policy: never
    build:
      context: ../../docker/userdetails
      dockerfile: Dockerfile
      args:
        USERDETAILS_VERSION: {{ user_details_version | default('3.2.1') }}
        USERDETAILS_REPO: {{ userdetails_repo | default('https://github.com/AtlasOfLivingAustralia/userdetails.git') }}
        USERDETAILS_BRANCH: {{ userdetails_branch | default('master') }}
{% else %}
    # Using locally built image (from docker buildx bake)
    image: userdetails:{{ user_details_version | default('3.2.1') }}
    pull_policy: never
{% endif %}
    volumes:
      - ../userdetails:/data/userdetails
{% if i18n.enabled and i18n.strategy == 'volume' %}
      - {{ i18n.volume.name }}:/opt/atlas/i18n/:ro
{% endif %}
    environment:
      TZ: {{ server_tz | default('UTC') }}
      JAVA_OPTS: ${USERDETAILS_JAVA_OPTS}
    ports:
      - "9001:8080"
    networks:
      default: {}
      {{ docker_network | default('la_internal') }}:
        aliases:
          - {{ userdetails_hostname | default(userdetails_docker_host | default('userdetails')) }}
    depends_on:
{% if i18n.enabled and i18n.strategy == 'volume' and i18n.volume.source == 'init-container' %}
      i18n-init:
        condition: service_completed_successfully
{% endif %}
      mysql:
        condition: service_healthy
      cas:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "--fail", "http://localhost:8080/userdetails/"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 60s
    restart: unless-stopped


