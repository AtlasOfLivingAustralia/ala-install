  # CAS Authentication Server
  cas:
{% if build_images | default(false) %}
    # Using locally built image
    image: cas:{{ docker_tag | default('develop') }}
    pull_policy: never
    build:
      context: {{ playbook_dir }}/../docker/cas
      dockerfile: Dockerfile
      args:
        CAS_VERSION: {{ cas_version | default('6.5.6-3') }}
        CAS_REPO: {{ cas_repo | default('https://github.com/AtlasOfLivingAustralia/ala-cas-5.git') }}
        CAS_BRANCH: {{ cas_branch | default('master') }}
{% else %}r.
    # Using pre-built image from livingatlases
    image: livingatlases/cas:{{ cas_version | default('6.5.6-3') }}
{% endif %}
    volumes:
      - ./cas/config:/data/cas/config:ro
      - ./cas/data:/data/cas/data
{% if i18n.enabled and i18n.strategy == 'volume' %}
      - {{ i18n.volume.name }}:/opt/atlas/i18n/:ro
{% endif %}
    environment:
      TZ: {{ server_tz | default('UTC') }}
      DOCKERIZE_OPTS: "-wait tcp://{{ cas_db_hostname | default('mysql') }}:3306 -wait tcp://{{ ticket_registry_db_hostname | default('mongodb') }}:27017 -timeout 120s"
    ports:
      - "9000:8080"
    networks:
      default: {}
      {{ docker_network | default('la_internal') }}:
        aliases:
          - {{ cas_hostname | default(cas_docker_host | default('cas')) }}
    depends_on:
{% if i18n.enabled and i18n.strategy == 'volume' and i18n.volume.source == 'init-container' %}
      i18n-init:
        condition: service_completed_successfully
{% endif %}
      mysql:
        condition: service_healthy
      mongodb:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "--fail", "http://localhost:8080/cas/status"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 90s
    restart: unless-stopped


