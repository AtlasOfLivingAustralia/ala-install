  # Species List Service
  species-list:
    container_name: species-list
{% if build_images is defined and (build_images | bool or build_images == 'true') %}
    image: {{ docker_registry | default('') }}species-list:{{ species_list_version | default('latest') }}
    pull_policy: never
    build:
      context: ../docker/species-list
      dockerfile: Dockerfile
{% else %}
    # Use locally built image (from docker buildx bake)
    image: species-list:{{ species_list_version | default('latest') }}
    pull_policy: never
{% endif %}
    volumes:
      - ./species-list:/data/species-list
{% if i18n.enabled and i18n.strategy == 'volume' %}
      - {{ i18n.volume.name }}:/opt/atlas/i18n/:ro
{% endif %}
    environment:
      TZ: {{ server_tz | default('UTC') }}
      JAVA_OPTS: ${SPECIES_LIST_JAVA_OPTS}
    ports:
      - "9010:8080"
    networks:
      default: {}
      {{ docker_network | default('la_internal') }}:
        aliases:
          - {{ specieslist_hostname | default(species_list_docker_host | default('species-list')) }}
    depends_on:
{% if i18n.enabled and i18n.strategy == 'volume' and i18n.volume.source == 'init-container' %}
      i18n-init:
        condition: service_completed_successfully
{% endif %}
      mysql:
        condition: service_healthy
{% if 'cas' in services_enabled or groups['cas-servers'] is defined %}
      cas:
        condition: service_healthy
      userdetails:
        condition: service_healthy
      apikey:
        condition: service_healthy
      cas-management:
        condition: service_healthy
{% endif %}
    healthcheck:
      test: ["CMD", "curl", "--fail", "http://localhost:8080/specieslist/"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 60s
    restart: unless-stopped

