# Generated from {{ inventory_file }} at {{ ansible_date_time.iso8601 }}
# Environment variables for docker-compose services
# DO NOT COMMIT THIS FILE - it contains sensitive passwords

# MySQL Database Configuration
MYSQL_ROOT_PASSWORD={{ mysql_root_password_env }}
MYSQL_COLLECTORY_PASSWORD={{ mysql_collectory_password_env }}
MYSQL_COLLECTORY_USER={{ mysql_collectory_user }}
MYSQL_DATABASE_CHARSET={{ mysql_database_charset }}

# MongoDB Configuration
MONGODB_ROOT_PASSWORD={{ mongodb_root_password_env }}
MONGODB_ROOT_USERNAME={{ mongodb_root_username }}

# CAS Authentication
{% if cas_ldap_password_env is defined and cas_ldap_password_env %}
CAS_LDAP_PASSWORD={{ cas_ldap_password_env }}
{% endif %}

# Timezone
TZ={{ server_tz }}

# Docker Image Tags
DOCKER_TAG={{ docker_tag }}

# Hostnames for services
COLLECTORY_HOSTNAME={{ collectory_hostname }}
CAS_HOSTNAME={{ cas_host_name }}
SPECIES_LIST_HOSTNAME={{ specieslist_hostname }}

# Ports
HTTP_PORT={{ docker_http_port }}
HTTPS_PORT={{ docker_https_port }}

# Email Configuration
EMAIL_HOSTNAME={{ email_hostname }}
EMAIL_SENDER={{ email_sender }}
EMAIL_SENDER_PASSWORD={{ email_sender_password }}
EMAIL_SENDER_SERVER={{ email_sender_server }}
EMAIL_ALLOWED_DOMAINS={{ email_allowed_domains }}

