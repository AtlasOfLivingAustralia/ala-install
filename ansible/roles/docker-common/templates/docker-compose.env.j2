# Generated from {{ inventory_file }} at {{ ansible_date_time.iso8601 }}
# Environment variables for docker-compose services
# DO NOT COMMIT THIS FILE - it contains sensitive passwords

# MySQL Database Configuration
MYSQL_ROOT_PASSWORD={{ mysql_root_password_env }}
MYSQL_COLLECTORY_PASSWORD={{ mysql_collectory_password_env }}
MYSQL_COLLECTORY_USER={{ mysql_collectory_user | default('collectory') }}
MYSQL_DATABASE_CHARSET={{ mysql_database_charset | default('utf8mb4') }}

# MongoDB Configuration
MONGODB_ROOT_PASSWORD={{ mongodb_root_password_env }}
MONGODB_ROOT_USERNAME={{ mongodb_root_username | default('root') }}

# CAS Authentication
{% if cas_ldap_password_env %}
CAS_LDAP_PASSWORD={{ cas_ldap_password_env }}
{% endif %}

# Timezone
TZ={{ server_tz | default('UTC') }}

# Docker Image Tags
DOCKER_TAG={{ docker_tag | default('develop') }}

# Hostnames for services
COLLECTORY_HOSTNAME={{ collectory_hostname | default('colecciones-es.l-a.site') }}
CAS_HOSTNAME={{ cas_host_name | default('auth-es.l-a.site') }}
SPECIES_LIST_HOSTNAME={{ specieslist_hostname | default('listas-es.l-a.site') }}

# Ports
HTTP_PORT={{ docker_http_port | default(80) }}
HTTPS_PORT={{ docker_https_port | default(443) }}

# Email Configuration
{% if email_sender is defined and email_sender %}
EMAIL_SENDER={{ email_sender }}
EMAIL_SENDER_PASSWORD={{ email_sender_password | default('') }}
EMAIL_SENDER_SERVER={{ email_sender_server | default('') }}
EMAIL_ALLOWED_DOMAINS={{ email_allowed_domains | default('l-a.site') }}
{% endif %}
