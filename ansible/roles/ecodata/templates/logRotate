/var/log/mongodb/*.log {
    daily
        rotate 30
        dateext
        missingok
        compress
        delaycompress
        notifempty
        extension gz
        create 644 mongodb mongodb
        sharedscripts
        postrotate
          /bin/kill -SIGUSR1 `cat /data/mongodb/mongod.lock 2>/dev/null` >/dev/null 2>&1
        endscript
}
