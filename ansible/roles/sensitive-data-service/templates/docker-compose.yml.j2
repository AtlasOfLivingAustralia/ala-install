---
version: '3.8'

services:

  war:
    image: atlasoflivingaustralia/ala-sensitive-data-service:1.1.1-20210811-3
    environment:
      TZ: {{ server_tz }}
    expose:
      - {{sensitive_data_service_port}}
      - {{sensitive_data_admin_port}}
    networks:
      la_internal:
    volumes:
      - conf:{{ data_dir }}/ala-sensitive-data-service
      - i18n:/opt/atlas/i18n
      - i18n_custom:/var/opt/atlas/i18n

networks:
  la_internal:
    external: true

volumes:

  conf:
    driver: local
    driver_opts:
      type: none
      o: bind
      device: {{ data_dir }}/ala-sensitive-data-service/config"

  i18n:
    driver: local
    driver_opts:
      type: none
      o: bind
      device: /opt/atlas/i18n

  i18n_custom:
    driver: local
    driver_opts:
      type: none
      o: bind
      device: /var/opt/atlas/i18n

